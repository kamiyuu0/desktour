<div class="container mx-auto mt-4 px-4">
    <% flash.each do |message_type, message| %>
        <% bg_color = case message_type.to_sym
            when :success then 'bg-blue-100 border-blue-500 text-blue-700'
            when :danger then 'bg-red-100 border-red-500 text-red-700'
            else 'bg-gray-100 border-gray-500 text-gray-700'
        end %>
        <div class="border-l-4 p-4 mb-4 <%= bg_color %> rounded-md">
            <%= message %>
            <%= bg_color %>
        </div>
    <% end %>
</div>